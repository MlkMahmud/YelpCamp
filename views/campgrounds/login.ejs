<% include ../partials/header %>

<h3 class="text-center">Login</h3>

<form method="POST" action="/login">
    <div class="form-group">
        <input class="form-control" style="width: 30%; margin: 0 auto;" type="text" placeholder="Username" name="username" required>
    </div>
    <div class="form-group">
        <input  class="form-control mx-auto" style="width:30%;" type="password" placeholder="Password" name="password" required>
    </div>
    <div class="form-group">
        <button style="width:30%; display: block; margin: 0 auto;" class="btn-md btn-primary rounded" type="submit">LOGIN!</button>
    </div>
</form>

