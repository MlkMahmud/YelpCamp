<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="margin: 20px auto; text-transform: uppercase;">Add a new Camp</h1>
    </div>
</div>

<form method="POST" action="/campgrounds">
    <div class="form-group">
        <input class="form-control" style="width: 30%; margin: 0 auto;" type="text" placeholder="Name" name="name" required>
    </div>
    <div class="form-group">
        <input  class="form-control mx-auto" style="width:30%;" type="text" placeholder="Image url" name="image" required>
    </div>
    <div class="form-group">
        <input  class="form-control mx-auto" style="width:30%;" type="number" min="0.01" step="0.01" placeholder="Price" name="price" required>
    </div>
    <div class="form-group">
        <input  class="form-control mx-auto" style="width:30%;" type="text" placeholder="Description" name="desc" required>
    </div>
    <div class="form-group">
        <button class="btn-primary btn-lg rounded" style="width:30%; display: block; margin: 0 auto;" class="btn-md btn-primary" type="submit">SUBMIT!</button>
    </div>
</form>
    <div class="row">
        <div style="width:30%;" class="mx-auto">
            <a href="/campgrounds" style="text-align: left;">Back</a>
        </div>
    </div>
    





<% include ../partials/footer %>
