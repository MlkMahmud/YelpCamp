<% include ../partials/header %>

<h3 class="text-center"><%=camp.name%></h3>

<form method="POST" action="/campgrounds/<%=camp._id%>?_method=PUT">
    <div class="form-group">
        <input class="form-control" style="width: 30%; margin: 0 auto;" type="text" value="<%=camp.name%>" name="name" required>
    </div>
    <div class="form-group">
        <input class="form-control" style="width: 30%; margin: 0 auto;" type="number" value="<%=camp.price%>" name="price" step="0.01" required>
    </div>
    <div class="form-group">
        <input  class="form-control mx-auto" style="width:30%;" type="text" value="<%=camp.image%>" name="image" required>
    </div>
    <div class="form-group">
        <input  class="form-control mx-auto" style="width:30%;" type="text" value="<%=camp.description%>" name="desc" required>
    </div>
    <div class="form-group">
        <button style="width:30%; display: block; margin: 0 auto;" class="btn-md btn-primary rounded" type="submit">UPDATE</button>
    </div>
</form>

<% include ../partials/footer %>